@model IEnumerable<Backend.Models.ProductVariant>
@{
    ViewData["Title"] = "Product Variants";
    var productId = ViewBag.ProductId;
}

<h1>Product Variants List</h1>

<a asp-action="Create" asp-route-productId="@productId" class="btn btn-success mb-3">Add new variants </a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Color</th>
            <th>Size</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var variant in Model)
        {
            <tr>
                <td>@variant.Color.Name</td>
                <td>@variant.Size.Name</td>
                <td>@variant.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@variant.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@variant.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-action="Delete" asp-route-id="@variant.Id" class="btn btn-sm btn-danger">Add Image</a>
                </td>
            </tr>
        }
    </tbody>
</table>
